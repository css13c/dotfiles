" Universal Settings ------------------------------------------{{{
	source ~/vimfiles/config/unirc.vim							" Get settings from unirc
"}}}

" Movement ----------------------------------------------------{{{
	map gt :vsc Window.NextTab<CR>
	map gp :vsc Window.PreviousTab<CR>
	map gc :vsc Window.CloseDocumentWindow<CR>
	map gC :vsc Window.CloseAllDocuments<CR>
	map gq :vsc Window.PinTab<CR>
	map gQ :vsc OtherContextMenus.EasyMDIToolWindow.CloseAllButPinned<CR>
	map gd :vsc ReSharper.ReSharper_GotoImplementations<CR>
	map gi :vsc Edit.GoToDefinition<CR>
	map gu :vsc ReSharper.ReSharper_FindUsages<CR>
	map gU :vsc ReSharper.ReSharper_GotoUsage<CR>
	map gs :vsc ReSharper.ReSharper_LocateInSolutionOrAssemblyExplorer<CR>
	map g< :vsc View.NavigateBackward<CR>
	map g> :vsc View.NavigateForward<CR>
"}}}

" Leader Shortcuts --------------------------------------------{{{
	" Visual Studio shortcuts
	nnoremap <leader>rr :vsc Refactor.Rename<CR>
	nnoremap <leader>b :vsc Build.BuildSolution<CR>
	nnoremap <leader>B :vsc Build.RebuildSolution<CR>
	nnoremap <leader>da :vsc Debug.AttachtoProcess<CR>
	nnoremap <leader>db :vsc Debug.ToggleBreakpoint<CR>
	nnoremap <leader>ds :vsc Debug.Start<CR>
	nnoremap <leader>dt :vsc Debug.StopDebugging<CR>
	nnoremap <leader>dc :vsc DebuggerContextMenus.ProcessesWindow.ContinueProcess<CR>
	vnoremap <leader>ec :vsc Edit.CommentSelection<CR>
	vnoremap <leader>eu :vsc Edit.UncommentSelection<CR>
	nnoremap <leader>us :vsc ReSharper.ReSharper_ShowUnitTestSessions<CR>
	nnoremap <leader>ur :vsc ReSharper.ReSharper_UnitTestSessionRepeatPreviousRun<CR>
	nnoremap <leader>uc :vsc ReSharper.ReSharper_UnitTestRunCurrentSession<CR>
	nnoremap <leader>ua :vsc ReSharper.ReSharper_UnitTestSessionAppendTests<CR>
	nnoremap <leader>ud :vsc ReSharper.ReSharper_UnitTestDebugContext<CR>
	nnoremap <leader>og :vsc Tools.ExternalCommand1<CR>
	nnoremap <leader>sv :vsc Window.NewVerticalTabGroup<CR>
	" Reload vsvimrc
	nnoremap <leader>` :source ~/_vsvimrc<CR>
"}}}

